# Environment Configuration
NODE_ENV=development

# Application
NEXT_PUBLIC_APP_NAME="Analytical Chemistry PWA"
NEXT_PUBLIC_APP_VERSION="0.1.0"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_OFFLINE_ENABLED=true

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=""
NEXT_PUBLIC_HOTJAR_ID=""

# API Configuration (Optional - for future backend integration)
NEXT_PUBLIC_API_URL=""
API_SECRET_KEY=""

# Database (Optional - for future backend integration)
DATABASE_URL=""

# External Services (Optional)
NEXT_PUBLIC_SENTRY_DSN=""

# Development
ANALYZE=false
DISABLE_ESLINT=false
DISABLE_TYPE_CHECK=false

# Chemistry Constants (can be overridden)
NEXT_PUBLIC_DEFAULT_TEMPERATURE=298.15
NEXT_PUBLIC_DEFAULT_PRESSURE=101325
NEXT_PUBLIC_GAS_CONSTANT=8.314

# UI Configuration
NEXT_PUBLIC_THEME_DEFAULT="light"
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# Performance
NEXT_PUBLIC_ENABLE_SW=true
NEXT_PUBLIC_CACHE_STRATEGY="stale-while-revalidate"

# Security
NEXTAUTH_SECRET=""
NEXTAUTH_URL="http://localhost:3000"

# Feature Flags
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false 